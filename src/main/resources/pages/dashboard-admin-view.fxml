            <Button fx:id="registerCourseButton" layoutX="563.0" layoutY="33.0" mnemonicParsing="false" onAction="#onClickButtonRegisterCourse" style="-fx-background-color: #ffffff;" text="Cadastrar Curso" textFill="#3d6297">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="registerTeacherButton" layoutX="717.0" layoutY="33.0" mnemonicParsing="false" onAction="#onClickButtonRegisterTeacher" style="-fx-background-color: #ffffff;" text="Cadastra Professor" textFill="#3d6297">
